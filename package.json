{
  "name": "typst-table-paste",
  "displayName": "Typst Table Paste",
  "description": "Paste and convert RTF/CSV tables to Typst table syntax",
  "version": "0.3.1",
  "publisher": "leichaoL",
  "author": "leichaoL",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/leichaoL/typst-table-paste"
  },
  "bugs": {
    "url": "https://github.com/leichaoL/typst-table-paste/issues"
  },
  "homepage": "https://github.com/leichaoL/typst-table-paste#readme",
  "keywords": [
    "typst",
    "table",
    "converter",
    "rtf",
    "csv",
    "paste"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onCommand:typst-table-paste.convertTable",
    "onCommand:typst-table-paste.paste",
    "onCommand:typst-table-paste.convertFromFile",
    "onLanguage:typst"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "typst-table-paste.convertTable",
        "title": "Typst Table Paste: Convert Table"
      },
      {
        "command": "typst-table-paste.paste",
        "title": "Typst Table Paste: Paste and Convert"
      },
      {
        "command": "typst-table-paste.convertFromFile",
        "title": "Typst Table Paste: Convert from File"
      }
    ],
    "keybindings": [
      {
        "command": "typst-table-paste.paste",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus && editorLangId == typst"
      }
    ],
    "configuration": {
      "title": "Typst Table Paste",
      "properties": {
        "typstTablePaste.autoConvert": {
          "type": "boolean",
          "default": true,
          "description": "Automatically convert tables when pasting"
        },
        "typstTablePaste.preserveSuperscript": {
          "type": "boolean",
          "default": true,
          "description": "Preserve significance markers as superscript (*** → #super[***])"
        },
        "typstTablePaste.preserveBorders": {
          "type": "boolean",
          "default": true,
          "description": "Preserve table border styles"
        },
        "typstTablePaste.preserveAlignment": {
          "type": "boolean",
          "default": true,
          "description": "Preserve table alignment"
        },
        "typstTablePaste.threeLineTable": {
          "type": "boolean",
          "default": false,
          "description": "Use three-line table format (top, header bottom, bottom lines only)"
        },
        "typstTablePaste.autoMathMode": {
          "type": "boolean",
          "default": false,
          "description": "Automatically convert variable names and R² to math mode ($variable$)"
        },
        "typstTablePaste.mathModeExclusions": {
          "type": "array",
          "default": ["Constant", "Controls", "Observations", "N", "Fixed Effects", "Year FE", "Firm FE", "Industry FE", "Country FE"],
          "description": "List of terms to exclude from math mode conversion"
        },
        "typstTablePaste.addDividerAfterConstant": {
          "type": "boolean",
          "default": false,
          "description": "Add a horizontal line (table.hline()) after the 'Constant' row to separate it from fixed effects section"
        },
        "typstTablePaste.tableFolder": {
          "type": "string",
          "default": "typ_tables",
          "description": "Folder name for saving table files"
        },
        "typstTablePaste.includeTemplate": {
          "type": "string",
          "default": "#figure(include \"{path}\")",
          "description": "Template for table references, {path} will be replaced with the table file path"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@types/papaparse": "^5.3.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "papaparse": "^5.4.1",
    "rtf-parser": "^1.3.3"
  }
}
